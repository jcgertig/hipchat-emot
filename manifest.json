{
    "name": "HipChat Emot",
    "version": "0.0.1",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "storage",
        "http://*.hipchat.com/*",
        "https://*.hipchat.com/*",
        "http://hipchat-emoticons.nyh.name/"
    ],
    "content_scripts": [{
        "matches": ["http://*.hipchat.com/*", "https://*.hipchat.com/*", "http://hipchat-emoticons.nyh.name/"],
        "js": ["content.js", "js/jquery-1.10.2.min.js"],
        "css": ["styling.css"]
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "web_accessible_resources": ["input.html", "js/jquery-1.10.2.min.js", "bottom.png"]
}